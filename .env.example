# ===========================================
# CONFIGURACIÓN DE ENTORNO - BANCA EN LÍNEA
# ===========================================
# Copia este archivo como .env y configura las variables según tu entorno

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=banca_en_linea
DB_SSLMODE=disable

# ===========================================
# CONFIGURACIÓN DEL BACKEND
# ===========================================
# Puerto donde correrá el servidor backend
PORT=8080

# Clave secreta para JWT - CAMBIAR EN PRODUCCIÓN
# Generar una clave segura: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# CONFIGURACIÓN DEL FRONTEND
# ===========================================
# URL de la API del backend
VITE_API_URL=http://localhost:8081/api/v1

# ===========================================
# CONFIGURACIÓN DE DOCKER
# ===========================================
# Puertos para los servicios
BACKEND_PORT=8081
FRONTEND_PORT=8082
POSTGRES_PORT=5432

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
# Entorno de ejecución
NODE_ENV=development

# Configuración de logs
LOG_LEVEL=info

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
# Configuración CORS (separar múltiples orígenes con comas)
CORS_ORIGINS=http://localhost:8082,http://localhost:3000

# Configuración de sesiones
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# CONFIGURACIÓN DE TIGERBEETLE (OPCIONAL)
# ===========================================
# Si usas TigerBeetle para contabilidad
TIGERBEETLE_CLUSTER_ID=0
TIGERBEETLE_REPLICA_ADDRESSES=3000

# ===========================================
# INSTRUCCIONES DE USO
# ===========================================
# 1. Copia este archivo: cp .env.example .env
# 2. Edita las variables según tu entorno
# 3. NUNCA subas el archivo .env al repositorio
# 4. En producción, usa variables de entorno del sistema